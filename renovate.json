{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "rebaseWhen": "behind-base-branch",
    "assignees": [
        "@HarisHoulis"
    ],
    "reviewers": [
        "@HarisHoulis"
    ],
    "packageRules": [
        {
            "description": "Automatically merge minor and patch-level updates",
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "automerge": true,
            "platformAutomerge": true
        }
    ]
}
